# Variables de entorno para Pergamino App

# Firebase (Expo Public: no almacenar secretos privados, solo credenciales cliente)
EXPO_PUBLIC_FIREBASE_API_KEY=
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=
EXPO_PUBLIC_FIREBASE_PROJECT_ID=
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
EXPO_PUBLIC_FIREBASE_APP_ID=
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Configuración de la aplicación
EXPO_PUBLIC_APP_ENV=dev
EXPO_PUBLIC_APP_VERSION=
EXPO_PUBLIC_API_URL=

# Flags de funcionalidades y runtime
EXPO_PUBLIC_ENABLE_ANALYTICS=1
EXPO_PUBLIC_ENABLE_PROMOTIONS=1
EXPO_PUBLIC_ENABLE_DEBUG_MENU=0

EXPO_PUBLIC_QR_TTL_SECONDS=30
EXPO_PUBLIC_GEO_RADIUS_M=1000
EXPO_PUBLIC_LIMITS_PER_WEEK=7
EXPO_PUBLIC_COOLDOWN_MIN=15
EXPO_PUBLIC_MAINTENANCE_MODE=0
EXPO_PUBLIC_AUTO_LOCK_MIN=2

# Emuladores Firebase (desarrollo local)
EXPO_PUBLIC_USE_EMULATORS=0
EXPO_PUBLIC_EMULATOR_HOST=localhost
